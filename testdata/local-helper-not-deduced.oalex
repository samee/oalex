rule expr:
  var name = value;
where:
  name ~ /[a-z_]+/
  value ~ ([sign ~ '-'] num)
  num ~ /[0-9]+/

example expr:
  var x = 42;
outputs: {
  name: "x",
  value: { sign:{}, num:"42" },
}

example expr:
  var x = -42;
outputs: {
  name: "x",
  value: { sign:"-", num:"42" },
}

